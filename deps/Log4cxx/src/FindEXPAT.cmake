cmake_minimum_required(VERSION 3.26)

find_package(EXPAT CONFIG HINTS ${EXPAT_INSTALL_DIR})

get_target_property(EXPAT_INTERFACE_COMPILE_DEFINITIONS expat::expat INTERFACE_COMPILE_DEFINITIONS)
get_target_property(EXPAT_INTERFACE_INCLUDE_DIRECTORIES expat::expat INTERFACE_INCLUDE_DIRECTORIES)
get_target_property(EXPAT_IMPORTED_LOCATION expat::expat IMPORTED_LOCATION_RELEASE)

set(EXPAT_INCLUDE_DIRS ${EXPAT_INTERFACE_INCLUDE_DIRECTORIES})
set(EXPAT_LIBRARIES ${EXPAT_IMPORTED_LOCATION})

set(EXPAT_DIR ${EXPAT_INSTALL_DIR})
set(EXPAT_FOUND TRUE)
